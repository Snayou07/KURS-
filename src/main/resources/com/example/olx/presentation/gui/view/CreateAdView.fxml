<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" styleClass="root-pane-form" stylesheets="@../style/forms.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.olx.presentation.gui.controller.CreateAdController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label styleClass="form-header-label" text="Створити нове оголошення" />
                <GridPane hgap="10.0" vgap="15.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="20.0" />
                    </padding>
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="450.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Назва оголошення:" GridPane.rowIndex="0" />
                        <TextField fx:id="titleField" promptText="Наприклад, 'Продам ноутбук'" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Опис:" GridPane.rowIndex="1" />
                        <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Детальний опис вашого товару або послуги..." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Ціна (грн):" GridPane.rowIndex="2" />
                        <TextField fx:id="priceField" promptText="99.99" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Категорія:" GridPane.rowIndex="3" />
                        <ComboBox fx:id="categoryComboBox" prefWidth="450.0" promptText="Виберіть категорію" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    </children>
                </GridPane>
                <Label fx:id="errorLabel" styleClass="error-label" text="" />
                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="cancel-button" text="Скасувати" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveAd" styleClass="submit-button" text="Зберегти оголошення" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>