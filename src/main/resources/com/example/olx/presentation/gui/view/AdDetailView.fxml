<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" styleClass="root-pane-detail"
            stylesheets="@../style/detail.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.olx.presentation.gui.controller.AdDetailController">

    <children>
        <ScrollPane fitToWidth="true"
                    prefHeight="892.0"
                    prefWidth="800.0"
                    AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="mainContainer"
                      alignment="TOP_CENTER"
                      prefHeight="595.0"
                      prefWidth="784.0"
                      spacing="20.0"
                      styleClass="detail-container">
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>

                    <children>
                        <!-- Базова інформація -->
                        <Label fx:id="titleLabel" />
                        <TextArea fx:id="descriptionTextArea" />
                        <Label fx:id="priceLabel" />
                        <Label fx:id="authorLabel" />
                        <Label fx:id="categoryLabel" />
                        <Label fx:id="statusLabel" />
                        <Label fx:id="createdDateLabel" />

                        <!-- Контейнери -->
                        <VBox fx:id="mainContainer" />
                        <VBox fx:id="decoratorsContainer" />
                        <HBox fx:id="imageContainer" />
                        <VBox fx:id="premiumFeaturesContainer" />

                        <!-- Кнопки -->
                        <Button fx:id="contactButton" text="Контакт" />
                        <Button fx:id="favoriteButton" text="В обрані" />
                        <Button fx:id="shareButton" text="Поділитися" />
                        <!-- Заголовок оголошення -->
                        <Label fx:id="titleLabel"
                               styleClass="detail-title-label"
                               text="Назва оголошення"
                               wrapText="true" />

                        <!-- Основне зображення -->
                        <ImageView fx:id="adImageView"
                                   fitHeight="300.0"
                                   fitWidth="400.0"
                                   pickOnBounds="true"
                                   preserveRatio="true"
                                   styleClass="detail-image" />

                        <!-- Повідомлення про відсутність фото -->
                        <Label fx:id="noImageLabel"
                               managed="false"
                               text="Фото не завантажено"
                               visible="false"
                               styleClass="detail-meta-label" />

                        <!-- Блок з ціною -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label styleClass="detail-price-label"
                                       text="Ціна:" />
                                <Label fx:id="priceLabel"
                                       styleClass="detail-price-value"
                                       text="0.00 грн" />
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Секція з описом -->
                        <VBox spacing="12.0" styleClass="detail-section">
                            <children>
                                <Label styleClass="detail-section-header"
                                       text="Опис:" />
                                <Text fx:id="descriptionText"
                                      styleClass="detail-text-content"
                                      text="Довгий опис оголошення тут..."
                                      wrappingWidth="700.0" />
                            </children>
                        </VBox>

                        <!-- Місце для декорованої інформації буде додано програмно -->

                        <!-- Блок метаінформації -->
                        <VBox spacing="8.0" styleClass="detail-section-meta">
                            <children>
                                <HBox spacing="8.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="detail-meta-label"
                                               text="Категорія:" />
                                        <Label fx:id="categoryLabel"
                                               styleClass="detail-meta-value"
                                               text="Категорія" />
                                    </children>
                                </HBox>

                                <HBox spacing="8.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="detail-meta-label"
                                               text="Продавець:" />
                                        <Label fx:id="sellerLabel"
                                               styleClass="detail-meta-value"
                                               text="Ім'я Продавця" />
                                    </children>
                                </HBox>

                                <HBox spacing="8.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="detail-meta-label"
                                               text="ID Оголошення:" />
                                        <Label fx:id="adIdLabel"
                                               styleClass="detail-meta-value"
                                               text="ідентифікатор" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Блок з кнопками дій -->
                        <HBox fx:id="actionButtonsBox"
                              alignment="CENTER"
                              spacing="20.0">
                            <VBox.margin>
                                <Insets top="30.0" />
                            </VBox.margin>
                            <children>
                                <!-- Кнопка редагування (видима тільки для власника) -->
                                <Button fx:id="editButton"
                                        managed="false"
                                        mnemonicParsing="false"
                                        onAction="#handleEditAd"
                                        styleClass="action-button"
                                        text="✏️ Редагувати"
                                        visible="false">
                                    <tooltip>
                                        <Tooltip text="Редагувати це оголошення" />
                                    </tooltip>
                                </Button>

                                <!-- Кнопка видалення (видима для власника та адміна) -->
                                <Button fx:id="deleteButton"
                                        managed="false"
                                        mnemonicParsing="false"
                                        onAction="#handleDeleteAd"
                                        styleClass="delete-button"
                                        text="🗑️ Видалити"
                                        visible="false">
                                    <tooltip>
                                        <Tooltip text="Видалити це оголошення назавжди" />
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Кнопка повернення -->
                        <Button fx:id="backButton"
                                mnemonicParsing="false"
                                onAction="#handleBack"
                                styleClass="secondary-button"
                                text="⬅️ Назад до списку">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <tooltip>
                                <Tooltip text="Повернутися до списку оголошень" />
                            </tooltip>
                        </Button>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>